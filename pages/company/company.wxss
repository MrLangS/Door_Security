.wrapper {
  padding-top: 110rpx !important;
}
.profile {
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center; 
  overflow: hidden
}
.checkbox{
  display:inline-block;
  margin:10px;
  padding:6px;
  background:#eee;
  border-radius: 4px;
}
.checkedActive{
  background:#40a7e7;
  color:#fff;
}

.modalpicker{
  position: relative;
  width: 100%; 
  height: 300px;
}
.profile .avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  box-shadow: 3px 4px 12px 0 rgba(0,0,0,.2);
}
.profile .info {
  height: 150rpx;
  flex: 1;
  padding: 10rpx 20rpx;
  flex-direction: column;
  font-size: 24rpx;
  color: #abb4bf;
  display: flex;
  justify-content: center;
}
.profile .title {
  font-size: 40rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.addr{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.profile .info .text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.profile .more {
  display: flex;
  align-items: center;
}
.profile .more image {
  width: 20rpx;
  height: 40rpx;
}
.profile .more .reddot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff5959;
  margin-right: 10rpx;
}
.add{
  height: 40rpx;
  width: 40rpx;
  margin-right: 5rpx;
}
.new{
  background: #fff;
  height: 90rpx;
  position: fixed;
  width: 100%;
  z-index: 100;
  display: flex;
  direction: row;
  justify-content: center;
  align-items: center;
  right: 0;
  top: 0;
  left: 0;
  color: #3281ff;
  /* background: rgba(6, 69, 243, 0.1); */
}
.item{
  padding: 0 40rpx;
  width: 100%;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  margin-left: -180px;
}
.code {
  background-color: #d3d3d3;
  height: 180rpx;
  width: 90px;
  display: flex;
  /* margin-left: 40rpx; */
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.del {
  background-color: orangered;
  height: 180rpx;
  width: 90px;
  display: flex;
  /* margin-left: 40rpx; */
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .item, .touch-move-active .del, .touch-move-active .code {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}