<view hidden='{{hideSearch}}' class='search' wx:if='{{!bcgImgAreaShow}}' catchtap='search' style='background:#3281ff'>
  <view class='wrapper'>
    <image src='/images/search.png'></image>
    <view class='placeholderClass'>搜索人员</view>
  </view>
</view>
<view class='wrapper'>
  <view class='card items'>
    <view catchtap='chooseImg' class='logo-height' hover-class='hover-class'>
      <view class='title'>
        <view>单位logo</view>
      </view>  
      <image catchtap='preview' class='rightImg' src='{{dataArr[0]?dataArr[0]:"/images/cmpany.png"}}'></image>
    </view>
    <view class='item' catchtap='navigateItem' data-url='/pages/modify/modify?title=单位名称&content={{dataArr[1]}}&index=1' hover-class='hover-class'>
      <view class='title'>
        <view>单位名称</view>
      </view>
      <view class='count longText'>{{dataArr[1] || '未知'}}</view>
    </view>
    <view class='item' catchtap='navigateItem' data-url='/pages/modify/modify?title=详细地址&content={{dataArr[2]}}&index=2' hover-class='hover-class'>
      <view class='title'>
        <view>详细地址</view>
      </view>
      <view class='count longText'>{{dataArr[2] || '未知'}}</view>
    </view>
  </view>
  <!-- 查看设备权限部分 -->
  <view class='card items'>
    <view class='item' catchtap='navigateItem' data-url='/pages/modifyCompDevs/modifyCompDevs?devs={{devs}}&id={{company.id}}&img={{dataArr[0]}}&name={{dataArr[1]}}' hover-class='hover-class'>
      <view class='title'>
        <view>设备权限</view>
      </view>
      <!-- <view class='count'>查看</view> -->
      <view class='more'>
        <image src='/images/profile_arrow.png'></image>
      </view>
    </view>
    
  </view>

  <!-- 修改考勤规则 -->
  <view class='card items'>
    <view class='item' catchtap='navigateItem' data-url='/pages/company/attendRule/attendRule?id={{company.id}}&img={{dataArr[0]}}&name={{dataArr[1]}}' hover-class='hover-class'>
      <view class='title'>
        <view>考勤规则</view>
      </view>
      <!-- <view class='count'>查看</view> -->
      <view class='more'>
        <image src='/images/profile_arrow.png'></image>
      </view>
    </view>
    
  </view>

  <!-- 管理人员部分 -->
  <view class='card items'>
    <view class='item'>
      <view class='title'>
        <view style='color:#40a7e7;'>管理人员</view>
      </view> 
      <view style='color:#40a7e7;' class='count'>{{admin.length || 0}}人</view> 
    </view>
    <view class='item {{item.isTouchMove ? "touch-move-active" : ""}}' wx:for="{{admin}}" wx:key  bindtouchstart="touchstart" bindtouchmove="touchmove" hover-class='hover-class' data-index="{{index}}">
      <view class='content-staff'>
        <view class='title'>
          <image src='{{item.userPhotoURL?item.userPhotoURL:"/images/empty_avatar_user.png"}}'></image>
          <view>{{item.userName || '未知'}}</view>
        </view>
        <view class='count' catchtap='makeCall' data-index="{{index}}">
          <view>{{item.phoneNum}}</view>
        </view>
      </view>
      <view class="code" catchtap="config" data-index="{{index}}" catchtap='peoAttendance'>考勤统计</view>
      <view class="del" catchtap="del" hidden='{{!isMajorUser}}' data-index="{{index}}">删除</view>
    </view>
  </view>
  <!-- 普通员工部分 -->
  <view class='card items'>
    <view class='item'>
      <view class='title'>
        <view style='color:#40a7e7;'>普通员工</view>   
      </view> 
      <view style='color:#40a7e7;' class='count'>{{totalCount || 0}}人</view> 
    </view>
    <view class='item {{item.isTouchMove ? "touch-move-active" : ""}}' wx:for="{{staff}}" wx:key bindtouchstart="touchstart" bindtouchmove="touchmove" hover-class='hover-class' catchtap='navigatItem' data-flag='1' data-index="{{index}}">
      <view class='content-staff'>
        <view class='title'>
          <image src='{{item.person.photoURL?item.person.photoURL:"/images/empty_avatar_user.png"}}'></image>
          <view>{{item.person.personName || '未知'}}</view>
        </view>
        <view class='more'>
          <image src='/images/profile_arrow.png'></image>
        </view>
      </view>
      <view class="code" catchtap="config" data-index="{{index}}" data-flag='1' catchtap='peoAttendance'>考勤统计</view>
      <view class="del" catchtap="del" data-index="{{index}}" data-flag='1' >删除</view>
    </view>
  </view>

  <view class='new'>
    <view style='background: #3281ff;' class='bottom' hover-class='hover-cla' catchtap='newCMP'>新增人员</view>
    <button style='background: #4289ff;' class='bottom bottombut' hover-class='hover-cla' open-type="share">自助注册</button>
  </view>
</view>
<!-- margin-left:100rpx; -->
<!-- 日期弹窗 -->
  <modal hidden="{{hiddenmodal}}" title="选择相应日期" confirm-text="确定" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm">
    <picker-view indicator-style="height: 50px;" class='modalpicker' value="{{value}}" bindchange="bindChange">
      <picker-view-column>
        <view wx:for="{{years}}" wx:key style="line-height: 50px;margin-left:100rpx; ">{{item}}年</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{months}}" wx:key style="line-height: 50px;margin-left:100rpx; ">{{item}}月</view>
      </picker-view-column>
    </picker-view>
  </modal>
