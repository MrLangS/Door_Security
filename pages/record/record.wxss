.swiper-tab-list{  
  font-size: 30rpx;    
  display: inline-block;
  width: 50%;	
  color: #fff;
  opacity: 0.3;
}
.swiper-tab-li{  
  font-size: 30rpx;    
  display: inline-block;
  width: 100%;	
  color: #ffffff;
}
.on{ 
  background-color: #3281ff;
  color: #ffffff;	
  border-bottom: 5rpx solid #63d958;
  opacity: 1;
} 
