<view class='wrapper'>
  <image class='bcg' wx:if='{{bcgImg}}' src='{{bcgImg}}' mode='aspectFill' ></image>
  <view class='top'>
    <view class='avator'>
      <image bindtap='chooseImg' src='{{avatar}}' background-size="cover"></image>
    </view>
    <form class='form' bindsubmit='commit'>
      <view>
        <input name='username' bindinput='getUsername' placeholder='用户名' focus></input>
      </view>
      <button class='login' formType='submit'>下一步</button>
    </form>
  </view>
  <view class='footer'>门禁管理</view>
</view>
