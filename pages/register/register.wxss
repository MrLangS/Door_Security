@import "../login/login.wxss";

.code_btn{
  color: #bbb;
  padding: 0;
  margin-top: 10rpx;
  border-radius: 20rpx;
  z-index:2;
  font-size: 25rpx;
  height: 70rpx;
  width: 170rpx;
  line-height: 70rpx;
}
.codebox{
  position: absolute;
  width: 170rpx;
  height: 70rpx;
  right: -20rpx;
}
.register_bg{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 400rpx;
  background-color: #eb4613;
}
.phone_tip{
  position: absolute;
  right: 16%;
