.wrapper {
  padding-top: 110rpx;
}
.profile {
  /* width: 100%; */
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center; 
  /* padding-left: 40rpx; */
  overflow: hidden
}
.profile .avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 40rpx;
}
.profile .info {
  display: flex;
  flex: 1;
  font-size: 24rpx;
  color: #abb4bf;
}
.profile .name {
  font-size: 40rpx;
  color: #333;
}
.profile .info .text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.profile .more {
  display: flex;
  align-items: center;
}
.profile .more image {
  width: 20rpx;
  height: 40rpx;
}
.profile .more .reddot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff5959;
  margin-right: 10rpx;
}
.new{
  background: #fff;
  height: 90rpx;
  position: fixed;
  width: 100%;
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
  right: 0;
  top: 0;
  left: 0;
  background: rgba(6, 69, 243, 0.1);
}
.item{
  padding: 0 40rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}
.del {
  background-color: orangered;
  height: 180rpx;
  width: 90px;
  display: flex;
  /* margin-left: 40rpx; */
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .item, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}