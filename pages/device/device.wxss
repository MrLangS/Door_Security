.wrapper {
  padding-top: 110rpx;
}
.profile {
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center; 
  /* padding-left: 40rpx; */
  overflow: hidden
}
.profile .avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 40rpx;
  box-shadow: 3px 4px 12px 0 rgba(0,0,0,.2);
}
.profile .info {
  display: flex;
  /* flex: 1; */
  font-size: 24rpx;
  color: #abb4bf;
}
.profile .name {
  font-size: 40rpx;
  color: #333;
}
.profile .info .text {
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.profile .more {
  display: flex;
  align-items: center;
}
.profile .more image {
  width: 20rpx;
  height: 40rpx;
}
.profile .more .reddot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff5959;
  margin-right: 10rpx;
}
.add{
  height: 50rpx;
  width: 50rpx;
  margin-right: 10rpx;
}
.new{
  background: #fff;
  height: 90rpx;
  position: fixed;
  width: 100%;
  z-index: 100;
  display: flex;
  direction: row;
  justify-content: center;
  align-items: center;
  right: 0;
  top: 0;
  left: 0;
  color: #3281ff;
  /* background: rgba(6, 69, 243, 0.1); */
}
