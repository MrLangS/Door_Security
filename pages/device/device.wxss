.item{
  padding: 0 40rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  margin-left: -180px;
}
.del {
  background-color: orangered;
  height: 180rpx;
  width: 90px;
  display: flex;
  /* margin-left: 40rpx; */
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.code {
  background-color: #d3d3d3;
  height: 180rpx;
  width: 90px;
  display: flex;
  /* margin-left: 40rpx; */
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(180px);
  transform: translateX(180px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .item, .touch-move-active .del,.touch-move-active .code {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.no-box {
  position: relative;
  /* top: 20rpx; */
  padding-top: 0rpx;
  background: white;
}
.no-record{
  height: 400rpx;
  line-height: 400rpx;
  text-align: center;
}
