<view class='wrapper'>
  <view class='new' catchtap='newDEV'>
    <view>扫码新增设备</view>
  </view>
  <view class='no-box' wx:if="{{!devices.length}}">
    <view class='no-record'>
      暂无设备！
    </view> 
  </view>
  
  <block wx:for="{{devices}}" wx:key>
    <view class='card profile {{item.isTouchMove ? "touch-move-active" : ""}}' bindtouchstart="touchstart" bindtouchmove="touchmove" hover-class='hover-class' catchtap='navigatItem' data-index="{{index}}">
      <view class='item'>
        <view class='info'>
          <image class='avatar' src='{{company.avatar}}' wx:if='{{company.avatar}}'></image>
          <image class='avatar' src='/images/device.png' wx:else></image>
          <view class='text'>
            <view class='name'>{{item.devName || '设备名称'}}</view>
            <view>{{item.devAddr || '设备地址'}}</view>
          </view>
        </view>
        <view class='more'>
          <image src='/images/profile_arrow.png'></image>
        </view>
      </view>
      <view class="code" catchtap="code" data-index="{{index}}">生成二维码</view>
      <view class="del" catchtap="del" data-index="{{index}}">删除</view>
    </view>
  </block>
</view>
