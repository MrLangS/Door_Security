.box{
  padding: 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
}
.head{
  flex: 1;
}
.modify-content{
  width: 100%;
  padding-left: 10rpx;
  font-size: 33rpx;
  box-sizing: border-box;
  height: 80rpx;
  border-radius: 4rpx;
  border-bottom: 1rpx solid #90eeac;
}
.btn{
  color: #fff;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 4rpx;
  background: #3281ff;
}