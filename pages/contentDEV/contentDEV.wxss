.setting {
  font-size: 28rpx;
  color: #666;
}
.t {
  overflow: hidden;
  padding: 0 40rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.more-icon{
  width: 20rpx !important;
  height: 40rpx !important;
  position: absolute;
  top: 27rpx;
  right: -25rpx;
}
.left-row{
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  align-items: center;
  /* width: 200rpx; */
  height: 90rpx;
  font-size: 30rpx;
}
.left-row image {
  position: relative;
  margin-top: 10rpx;
  width: 40rpx !important;
  height: 40rpx !important;
}
.toast .t {
  font-size: 28rpx;
  color: #40a7e7;
  margin: 20rpx 0;
  padding: 0;
}
.count {
  font-size: 24rpx;
  color: #abb4bf;
}
.updateSoft{
  font-size: 28rpx;
  color: #40a7e7;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  position: relative;

}
.title {
  font-size: 32rpx;
  color: #40a7e7;
  margin: 26rpx 0;
}
.subtitle {
  font-size: 28rpx;
  color: #40a7e7;
}
.sub.content .item {
  padding-left: 20rpx;
}
.item .tip {
  font-size: 22rpx;
  color: #999;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.wifi{
  width: 40rpx;
  height: 40rpx;
}
.button {
  display: inline-block;
  /* padding: 15px 25px; */
  font-size: 48rpx;
  cursor: pointer;
  height: 80rpx;
  line-height:80rpx;
  width: 80rpx;
  text-align: center;   
  vertical-align:middle ;
  text-decoration: none;
  outline: none;
  color: #fff;
  border: none;
  border-radius: 50%;
  box-shadow: 0 6px 5px #999;
}
.active {
  box-shadow: 0 2px 5px #666;
  transform: translateY(4px);
}