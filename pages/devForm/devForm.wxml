<view class='wrapper'>
  <image class='bcg' wx:if='{{bcgImg}}' src='{{bcgImg}}' mode='aspectFill'></image>
  <view class='top'>
    <form class='form' bindsubmit='commit'>
      <view>
        <!-- <view class='item'>
          <label>服务器IP</label>
          <input name='serverIp' placeholder='IP地址' disabled='true' value='{{serverIp}}'></input>
        </view> -->
        <view class='item'>
          <label>设备名称</label>
          <input name='name' value='{{devName}}' placeholder='最好与详细地址相关联' focus></input>
        </view>
        <view class='item'>
          <label>详细地址</label>
          <input value='{{address}}' name='address'></input>
        </view>
        <view class='item'>
          <label>激活码</label>
          <input value='{{activationCode}}' name='activationCode'></input>
        </view>
        <view class='item'>
          <label>网络类型</label>
          <radio-group class='choose' name="netType" bindchange="radioChange">
            <view><radio value="0" checked="true"/>有线网络</view>
            <view><radio value="1" />无线网络</view>
          </radio-group>
        </view>
        <block wx:if='{{!hidden}}'>
          <view class='item'>
            <label>wifi名称</label>
            <input name='wfName' disabled='true' bindtap='showModal' value='{{wifiName}}'></input>
          </view>
          <view class='item'>
            <label>安全类型</label>
            <picker class='pick' bindchange="bindPickerChange" name='netSecurity' value="{{index}}" range="{{array}}">
              <view class="picker">
                {{array[index]}}
              </view>
            </picker>
          </view>
          <block wx:if='{{index!=3}}'>
          <view class='item'>
            <label>wifi密码</label>
            <input name='wfPassword' password='true'></input>
          </view>
          <view class='item'>
            <label>确认密码</label>
            <input name='checkPassword' password='true'></input>
          </view>
          </block>
        </block>
      </view>
      <button class='login' formType='submit'>确认</button>
    </form>
  </view>
  <view class='footer'>门禁管理</view>
</view>
<!-- 内部人员选择弹窗 -->
<modal hidden="{{modal}}" title="wifi选择" confirm-text="确定" cancel-text="取消" bindconfirm="confirm01"
bindcancel="cancel01">
  <radio-group bindchange="wifiradioChange">
    <label class="checkrad" wx:key wx:for="{{wifiNameList}}">
      <view>
        <radio value="{{item}}" checked="{{item.checked}}"/>{{item}}
      </view>
    </label>
  </radio-group>
  <view class='none' wx:if="{{!wifiNameList.length}}">未检测到wifi</view>
</modal>