<view class='content'>
  <view class='logo_bg green_bcg'>
    <image mode='aspectFit' class='logo' src='/images/safe.png' />
  </view>
  <view class='login_content'>
    <view class='switch_view'>
      <view class="stf_selected_title">
        密码修改
      </view>
    </view>

    <view class='input_view'>
      <!-- <view class='label_input'>
        <input class='{{focus&&index==0? "focus" : ""}} input_bar' bindfocus='focus' data-index='0' value='{{oldPW}}' name='oldPassword' placeholder='请输入原密码' bindinput='getAccount' bindblur='blur' />
      </view> -->
      <view class='label_input'>
        <view class='headlabel'><label>新密码：</label></view>
        <input class='{{focus&&index==1? "focus" : ""}} input_bar' bindfocus='focus' data-index='1' type='number' name='newPassword' placeholder='请输入6位新的数字密码' bindinput='getPassword' bindblur='blur' />
      </view>
      <view class='label_input'>
        <view class='headlabel'><label>再一次：</label></view>
        <input class='{{focus&&index==2? "focus" : ""}} input_bar' bindfocus='focus' data-index='2' type='number' name='checkPassword' placeholder='请再次输入新的密码' bindinput='getChPassword' bindblur='blur' cursor-spacing='10'/>
      </view>

    </view>
    <view class='login_button green_bcg' bindtap='confirm'>
      确认
    </view>
  </view>

</view>
